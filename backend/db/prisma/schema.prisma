generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String   @id @unique
  email           String   @unique
  password        String
  userType        userType
  isActive        Boolean
  phone           String 
  profileComplete Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  individual    individual?
  organization  organisation?
  admin         admin?
}

enum userType {
    individual
    organisation
    admin
}

model organisation {
  id              String    @id @unique

  userId          String    @unique
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  orgName         String
  phone           String
  website         String?
  isVerified      Boolean
  address         String

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model individual {
  id              String    @id @unique
  
  userId          String    @unique
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  fullName        String    
  gender          String?
  dob             DateTime
  profileImage    String

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model admin {
  id              Int       @id @default(autoincrement()) @unique 

  userId          String    @unique
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  fullName        String
  department      String

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}